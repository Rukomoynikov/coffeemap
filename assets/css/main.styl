*, *:after, *:before
	box-sizing: border-box

html, body
	margin 0px
	height 100%
	width 100%
	font-family Arial
	font-size 10px

body
	padding-top 50px

.navigation
	height 5rem
	background #383838
	box-shadow 0 0 3px black
	position absolute
	top 0px
	left 0px
	width 100%
	line-height 5rem
	font-size 1.5rem
	padding 0px 20px

	&__logo
		float left

	&__menu
		float left
		color white
		margin-right 10px

		&--profile
			float right

	&__link
		color white
		text-decoration none
		margin-right 15px
.map
	width calc(100% - 200px)
	height 100%
	background black

	&__infoWindow
		display none

.onePlace
	width 1024px
	margin 0px auto

.filter
	width 200px
	position absolute
	top 50px
	right 0px
	padding 10px

	&__group
		margin-bottom 20px

	&__label
		display block
		margin-bottom 10px
		font-size 1.5rem

	&__input
		display block
		width 100%
		height 2rem

		&--submit
			width auto
